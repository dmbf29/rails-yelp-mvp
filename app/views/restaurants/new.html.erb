<h1 class="main-title">Add a New Restaurant</h1>

<%= simple_form_for(@restaurant) do |f| %>
  <%= f.error_notification %>

<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm 6 col-m-3">
      <div class="form-inputs">
        <%= f.input :name %>
        <%= f.input :address %>
        <%= f.input :phone_number %>
        <%= f.input :category, :collection => ["chinese", "italian", "japanese", "french", "belgian"] %>
      </div>

      <div class="form-actions">
        <%= f.button :submit %>
      </div>
      <br>
      <%= link_to 'Back', restaurants_path %>
    </div>
  </div>
</div>
<% end %>


