<% content_for(:title_tag) do %>
  Read <%= @restaurant.name %> on My Yelp
<% end %>


<h1 class="main-title"><%= @restaurant.name %></h1>


<div class="restaurant-card">
  <div class="container">
    <div class="row">
      <div class="col-xs-12 col-sm 6 col-m-3">
        <h3><%= @restaurant.category %></h3>
        <p><%= @restaurant.address %></p>
        <p><em><%= @restaurant.phone_number %></em></p>
        <%= link_to "Write a Review", new_restaurant_review_path(@restaurant), :class =>"review-wagon-button btn" %>
        <br>
      </div>
    </div>
  </div>
</div>

<div class="review-card">
  <div class="container">
    <div class="row">
      <div class="col-xs-12 col-sm 6 col-m-3">
        <h3>reviews:</h3>
        <hr>
          <% @restaurant.reviews.each do |review| %>
            <p><%= review.content %></p>
            <p><% review.rating.times do %>
              <%= image_tag("yelp-star.png") %>
            <% end %>
            </p>
            <hr>
          <% end %>
      </div>
      <p><%= link_to 'Back', restaurants_path %></p>
    </div>
  </div>
</div>
