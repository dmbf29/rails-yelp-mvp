<h1 class="main-title">Add a Review for <%= @restaurant.name %></h1>
<div class="restaurant-card">
  <div class="container">
    <div class="row">
      <div class="col-xs-12 col-sm 6 col-m-3">
        <h3><%= @restaurant.category %></h3>
        <p><%= @restaurant.address %></p>
        <p><em><%= @restaurant.phone_number %></em></p>
      </div>
    </div>
  </div>
</div>

<div class="review-card">
  <div class="container">
    <div class="row">
      <div class="col-xs-12 col-sm 6 col-m-3">
        <%= simple_form_for [@restaurant, @review] do |f|%>
        <%= f.input :content, placeholder: "Awesome!" %>
        <%= f.input :rating, :collection => [1,2,3,4,5] %>
        <%= f.submit "Post Review", :class=> "btn btn-primary" %>
        <br>
      <% end %>
      </div>
    </div>
  </div>
</div>
